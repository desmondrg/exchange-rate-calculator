{
  "name": "exchange-rate-calculator",
  "version": "0.1.0",
  "author": "Desmond Rgwaringesu",
  "private": true,
  "scripts": {
    "start": "node dist/server/server.js",
    "build": "yarn run build:ui && yarn run build:api",
    "build:ui": "cross-env BUILD_PATH='./dist/browser' react-scripts build",
    "build:api": "ts-node prebuild.ts && tsc --build tsconfig.app.json && tscpaths -p tsconfig.app.json -s ./ -o ../../dist/server",
    "dev:ui": "react-scripts start",
    "dev:api": "nodemon --exec \"ts-node -P tsconfig.server.json -r tsconfig-paths/register --transpile-only server/main.ts --cache true\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@mui/icons-material": "^5.1.0",
    "@mui/material": "latest",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^5.1.3",
    "cross-env": "^7.0.3",
    "dateformat": "^5.0.2",
    "express": "~4.17.1",
    "react": "^17.0.2",
    "react-country-flag": "^2.3.1",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "rimraf": "~3.0.2",
    "ts-node": "~10.4.0",
    "tsconfig-paths": "~3.11.0",
    "tscpaths": "~0.0.9",
    "tslib": "~2.3.1",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@types/dateformat": "^5.0.0",
    "@types/express": "~4.17.13",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "~3.0.2",
    "nodemon": "~2.0.15"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
